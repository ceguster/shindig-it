<div id="recipe-show" class="clearfix">
  <div class="lg-recipe-image">
    <%= image_tag(@contribution.yummly_large_image)%>
  </div>
  <div class="recipe-show-info">
    <h3><%= @contribution.yummly_recipe_name %></h3>
    <h4>Number of Servings: <%= @contribution.yummly_num_servings %></h4>
    <h4>Total Time: <%= @contribution.yummly_time %></h4>
    <h4> Ingredients: </h4>
    <h5> - <%= @contribution.yummly_ingredients %></h5>
  </div>
  <div class="more-show"> 
    <%= link_to "See Full Recipe", @contribution.yummly_source, :target => "_blank"%>
  </div>
</div>