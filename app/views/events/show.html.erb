<html>
  <body>
    <script type="text/javascript">
      $(document).ready(function() {
          $(".fancybox").fancybox();
      });
    </script>
    <header>
      <h5> <%= link_to "Return to profile", profile_path(current_user.id) %> |
      <%=link_to "Log Out", destroy_user_session_path, :method => :delete %></h5>
    </header>
    <section id="wrapper">
      <h1><%= @event.name %></h1>
      <h2>by <%= @host.full_name %></h2>
      <% if @event.tagline %> <h3>"<%= @event.tagline %>"</h3><%end%><br>

      <h3>What? <%= @event.details %></h3><br>
      <h3>When? <%= @event.date %>, at <%= @event.formatted_time %></h3><br>
      <h3>Where? <%= @event.location %></h3>

      <h4> <%= link_to "Edit event", edit_event_path(@event) %><br>

      <% if @event.invitations.size != 0 %>
        <h3>Guest List</h3>
        <ul>
          <% @event.invitations.each do |invite| %>
            <li><%= invite.guest.full_name %> - <%= invite.status %></li>
          <% end %>
        </ul>
        <%= link_to "Invite more guests to #{@event.name}", new_event_invitation_path(@event) %>
      <% else %>
        <%= link_to "Invite guests to #{@event.name}", new_event_invitation_path(@event) %>
      <% end %>
      <br> 
      <% if @event.contributions.size != 0 %>
        <h3 >Menu</h3>
          <% @event.menu.each do |k,v| %>
            <h4><%= k %></h4>
              <ul id="<%= current_user.full_name %>">
                <% v.each do |contribution| %>
                  <li id="<%= contribution.id %>" data-id="<%= @event.id %>"><%= contribution.yummly_recipe_name %><% if contribution.guest_id == nil %><div class="unclaimed" id="unclaimed-<%= contribution.id %>">Claim</div><% else %> claimed by <%= contribution.guest.full_name %> -<div class="claimed" id="claimed-<%= contribution.id %>">Unclaim</div><% end %><%= link_to "More Info", event_contribution_path(@event, contribution), :class => "fancybox" %></li>
                <% end %>
              </ul>
          <% end %>
         <%= link_to "Add to menu for #{@event.name}", new_event_contribution_path(@event) %>  
      <% else %>
      <%= link_to "Create menu for #{@event.name}", new_event_contribution_path(@event) %>
      <% end %>
    </wrapper>
  </body>
</html>